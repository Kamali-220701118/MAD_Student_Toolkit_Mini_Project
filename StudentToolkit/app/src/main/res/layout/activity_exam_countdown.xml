<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/examDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Exam Date (yyyy-MM-dd):"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/examDateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g., 2025-05-10"
        android:importantForAutofill="no"
        android:inputType="date"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/calculateCountdownBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Countdown"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/countdownResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

</LinearLayout>
